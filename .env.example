# Powens API Configuration
POWENS_CLIENT_ID=your_client_id
POWENS_CLIENT_SECRET=your_client_secret
POWENS_DOMAIN=your-domain-sandbox.biapi.pro
POWENS_USER_ID=your_user_id

# OAuth Callback Configuration
POWENS_CALLBACK_URL=http://localhost:3000/powens/callback

# Analysis Configuration
ANALYSIS_MIN_POSITION_EUR=1000
TRANSACTION_THRESHOLD_EUR=10000

# Asset Classification Thresholds
SIGNIFICANCE_PERCENT_THRESHOLD=5.0
SIGNIFICANCE_VALUE_EUR_THRESHOLD=1000.0

# Crypto Configuration
# Comma-separated list of Ethereum wallet addresses to track
# Same addresses will be scanned across all supported chains (Ethereum, Base, Polygon, Arbitrum)
CRYPTO_WALLETS=0xYourWalletAddress1,0xYourWalletAddress2,0xYourWalletAddress3